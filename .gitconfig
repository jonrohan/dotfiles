[github]
  user = jonrohan
[gpg]
	program = gpg
[alias]
  br = branch
  ci = commit
  co = checkout
  cut = checkout -b
  ls = ls-files
  merged = !git-merged
  st = status
  sup = !git stash && git up && git pop
  up = pull --rebase
  vanity = shortlog -sn
  push = push -u
  # hub aliases
  open = !hub browse
[color]
	# Colour terminal command output when possible.
	ui = auto
[color "branch"]
  current = yellow reverse
  local = yellow
  remote = green
[color "diff"]
	meta = 8
	frag = magenta bold
	old = red bold
	new = green bold
	whitespace = red reverse
	commit = yellow bold
[color "status"]
  added = yellow
  changed = green
  untracked = cyan
[commit]
  gpgsign = true
[core]
  excludesfile = ~/.gitignore
  editor = vim
  ignorecase = false
	pager = diff-so-fancy | less --tabs=4 -RFX
[credential]
	# Use macOS Keychain to store HTTP passwords.
	helper = osxkeychain
[fetch]
	# Always prune when fetching (and pulling).
	prune = 1
[help]
  # Autocorrect mistyped commands.
	autocorrect = 1
[pull]
	# Default to rebasing on pulls
	rebase = true
[push]
	# Push to the set upstream branch being tracked by default.
	default = current
[rerere]
	# Store and re-use manual conflict resolution changes.
	enabled = 1
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
	newHighlight = green bold 22
